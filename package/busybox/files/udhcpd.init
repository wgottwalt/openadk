#!/bin/sh
#PKG busybox
#INIT 50
. /etc/rc.conf

case $1 in
autostop) ;;
autostart)
	test x"${udhcpd:-NO}" = x"NO" && exit 0
	exec sh $0 start
	;;
start)
	touch /var/udhcp.leases
	/usr/sbin/udhcpd -S
	;;
stop)
	kill $(pgrep -f /usr/sbin/udhcpd)
	;;
restart)
	sh $0 stop
	sh $0 start
	;;
*)
	echo "Usage: $0 {start | stop | restart}"
	exit 1
	;;
esac
exit $?
