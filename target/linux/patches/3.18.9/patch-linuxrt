diff -Nur linux-3.18.8.orig/include/trace/events/latency_hist.h linux-3.18.8/include/trace/events/latency_hist.h
--- linux-3.18.8.orig/include/trace/events/latency_hist.h	1970-01-01 01:00:00.000000000 +0100
