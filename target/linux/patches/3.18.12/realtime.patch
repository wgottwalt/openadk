+void perf_event_task_tick(void)
+{
+	struct list_head *head = this_cpu_ptr(&rotation_list);
+	struct perf_cpu_context *cpuctx, *tmp;
+	struct perf_event_context *ctx;
+	int throttled;
+
+	WARN_ON(!irqs_disabled());
