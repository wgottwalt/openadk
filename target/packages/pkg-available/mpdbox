	select ADK_PACKAGE_MPD_WITH_WAV
	select ADK_PACKAGE_MPD_WITH_MMS
	select ADK_PACKAGE_MPD_WITH_FFMPEG
	select ADK_PACKAGE_MPD_WITH_SHOUT
	select ADK_PACKAGE_MPD_WITH_CURL
	select ADK_PACKAGE_MPD_WITH_SAMPLERATE
